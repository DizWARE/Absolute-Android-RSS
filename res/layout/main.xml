<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<RelativeLayout
		android:id = "@+id/rl_titleBar"
		android:layout_width = "fill_parent"
		android:background = "@color/MehGreen" android:layout_height="50px">
		<ImageView 
			android:id = "@+id/iv_title"
			android:layout_alignParentLeft = "true"	
			android:background ="@drawable/aa_logosmall"
			android:layout_margin = "10px"		
			android:layout_width = "wrap_content" android:layout_height="wrap_content"
			/>
		<TextView
			android:id="@+id/AATitle"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:text = "Absolutely Android"
			android:layout_centerVertical = "true" 
			android:textSize="24px" 
			android:textColor="@color/Black" 
			android:layout_toRightOf="@+id/iv_title"
			/>
		<ImageButton
			android:id = "@+id/ib_refresh"
			android:layout_alignParentRight = "true"
			android:background = "@drawable/refresh"
			android:layout_margin = "10px"	
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"	
			
			/>

	</RelativeLayout>
	
	<ListView
		android:id="@+id/android:list" 
		android:layout_width = "fill_parent"
		android:layout_height = "fill_parent"
		android:layout_below = "@id/rl_titleBar"
		/>
	<TextView
		android:id="@+id/android:empty"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:text = "No news loaded...Try refreshing"
		android:textSize = "16px"
		android:layout_centerHorizontal = "true"
		android:layout_centerVertical = "true"
		/>
		
</RelativeLayout>
